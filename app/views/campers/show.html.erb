<div class="content-campers mt-5">
  <div class="back-list mt-5">
    <a href="/campers/">⬅️ back to campers</a>
  </div>
  <div class="d-flex justify-content-between mt-4">
    <div class="box-information-camper">
      <h2 class="pb-2"><%= @camper.name %></h2>
      <h4 class="pb-2"><%= @camper.description %></h4>
      <h4 class="pb-3"><%= @camper.price %>€ / day</h4>
      <%= link_to "Book now!", new_camper_booking_path(@camper), class: "btn btn-warning mt-3", style: "border-radius: 6px;" "color: white;" %>
        <% if policy(@camper).edit? %>
        <%= link_to "Edit your camper", edit_camper_path, class: "btn btn-secondary mt-3", style: "border-radius: 6px;" "color: white;" %>
        <% end %>
      <div class="mt-5 mb-5" id="map"
      style="width: 100%; margin:0 auto; height: 300px; border-radius: 30px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
    </div>
    <div class="image-show">
    <% if @camper.image.attached? %>
      <div style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)); object-fit: contain;", url('<%= cl_image_path @camper.image.key, height: 300, width: 200, crop: :fill %>')">
        <% else %>
        <%= image_tag("camper.jpg", style: "background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3));") %>
        <% end %>
      </div>
    </div>
  </div>
</div>
