<div class="m-0 p-0">
  <div class="banner-show">
      <div class="box">
        <div class="text-banner-show">
          <div class="banner-content">
            <h1 class="banner">Live the live <br>you always dreamed</h1>
            </div>
          </div>
        </div>
      </div>
  </div>
</div>

<div class="content-campers mt-5" style="margin-bottom:100px;">
  <h2  class="mb-5 d-flex justify-content-center align-items-center">Our campers</h2>
    <h5 class="cards-introduction mb-5">Find the best <strong>campers 🚐</strong> that suits your needs, and drive to discover new <strong>adventures🏔🌊🚀!</strong></h5>
  <div class="row">
    <% @campers.each do |camper| %>
      <div class="card rounde col-3 mb-5 p-3">
      <% if camper.image.attached? %>
      <%= image_tag(camper.image, class:"card-img-top pt-5")%>
      <% else %>
        <%= image_tag("camper.jpg", :alt => "camperpic", class:"card-img-top pt-5") %>
      <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= link_to camper.name, camper_path(camper) %></h5>
          <p class="card-text"><%= camper.description %></p>
          <p class="card-text"><strong><%= camper.price%>€ / day</strong></p>
          <p class="btn btn-warning"style="border-radius: 6px;"><%= link_to "View details", camper_path(camper) %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
