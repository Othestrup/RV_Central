<!DOCTYPE html>
<html>
  <head>
    <title>RVCentral</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
  </head>

  <body>
  <nav>

    <%= link_to image_tag("rv-logo.png", :alt => "logo", class: "logo-image" ), "/" %>
    <%# <a class="h2-nav" href="/"><h2>RV Central</h2></a> %>

    <a href="/">RV Central</a>
    <ul>
      <div class="item">
        <li class="nav-item"><a href="/campers">All Campers</a></li>
      </div>
    </ul>
     <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "Your bookings", "#", class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Your profile", "#", class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "https://avataaars.io/?avatarStyle=Circle&topType=ShortHairDreads01&accessoriesType=Kurt&hairColor=Black&facialHairType=BeardMedium&facialHairColor=BrownDark&clotheType=Hoodie&clotheColor=Gray01&eyeType=Default&eyebrowType=Default&mouthType=Default&skinColor=Light", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "btn btn-warning  p-2 nav-link" %>
        </li>
      <% end %>
  </nav>

    <%= yield %>
    <!---<p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>--->


  <footer>
    <div>
      <ul>
        <li><a href="#">Contact Us</a></li>
        <li><a href="#">About Us</a></li>
      </ul>
    </div>
    <div>
      <ul>
        <li><i class="fab fa-twitter"></i></li>
        <li><i class="fab fa-instagram"></i></li>
        <li><i class="fab fa-facebook"></i></li>
      </ul>
    </div>
    <div>
      <ul>
        <li><p class="text-copyright">&copy 2021 - RV Central</p></li>
      </ul>
    </div>
  </footer>
  </body>
</html>
