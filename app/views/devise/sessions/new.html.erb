<div class="content-campers height-login mt-5">
  <div class="login-form d-flex justify-content-center align-items-center">
    <h2>Log in</h2>
    <div class="content-login mt-4">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions d-flex justify-content-center align-items-center">
          <%= f.button :submit, "Log in", class: "btn btn-warning", style: "border-radius:8px;" %>
        </div>
      <% end %>
        <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
